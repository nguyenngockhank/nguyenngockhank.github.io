.col-xs-12
  width 100%

.col-xs-6
  width 50%

.col-xs-4
  width 33.33%

.col-xs-3
  width 25%


@media (min-width: 480px)
  .col-sm-12
    -webkit-box-flex: 0;
    flex: 0 0 100%;
    max-width: 100%;

  .col-sm-6
    -webkit-box-flex: 0;
    flex: 0 0 50%;
    max-width: 50%;

  .col-sm-4
    -webkit-box-flex: 0;
    flex: 0 0 33.333333%;
    max-width: 33.333333%;

  .col-sm-3
    -webkit-box-flex: 0;
    flex: 0 0 25%;
    max-width: 25%;

@media (min-width: 768px)
  .col-md-12
    -webkit-box-flex: 0;
    flex: 0 0 100%;
    max-width: 100%;

  .col-md-6
    -webkit-box-flex: 0;
    flex: 0 0 50%;
    max-width: 50%;

  .col-md-4
    -webkit-box-flex: 0;
    flex: 0 0 33.333333%;
    max-width: 33.333333%;

  .col-md-3
    -webkit-box-flex: 0;
    flex: 0 0 25%;
    max-width: 25%;

@media (min-width: 1024px)
  .col-lg-12
    -webkit-box-flex: 0;
    flex: 0 0 100%;
    max-width: 100%;

  .col-lg-6
    -webkit-box-flex: 0;
    flex: 0 0 50%;
    max-width: 50%;

  .col-lg-4
    -webkit-box-flex: 0;
    flex: 0 0 33.333333%;
    max-width: 33.333333%;

  .col-lg-3
    -webkit-box-flex: 0;
    flex: 0 0 25%;
    max-width: 25%;